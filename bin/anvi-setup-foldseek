#!/usr/bin/env python
# -*- coding: utf-8

import sys
import anvio

from anvio.drivers.foldseek import FoldseekSetupWeight
from anvio.errors import ConfigError, FilesNPathsError


__copyright__ = "Copyleft 2015-2024, The Anvi'o Project (http://anvio.org/)"
__credits__ = []
__license__ = "GPL 3.0"
__version__ = anvio.__version__
__maintainer__ = "Metehan Sever"
__email__ = "metehaansever@gmail.com"
__provides__ = ['foldseek-prostt5-weights']
__description__ = "Setup Foldseek PROSTT5 weights"
__resources__ = [(" Documents of Foldseek ")]

if __name__ == '__main__':
    from anvio.argparse import ArgumentParser

    parser = ArgumentParser(description=__description__)
    parser.add_argument(*anvio.A('weight-dir'), **anvio.K('weight-dir'))
    parser.add_argument(*anvio.A('reset'), **anvio.K('reset'))

    args = parser.get_args(parser)

    try:
        setup = FoldseekSetupWeight(args)
        setup.setup()

    except ConfigError as e:
        print(e)
        sys.exit(-1)
    except FilesNPathsError as e:
        print(e)
        sys.exit(-1)
