#!/usr/bin/env python
# -*- coding: utf-8

import sys

import anvio
import anvio.terminal as terminal
import anvio.structurepan as span
from anvio.argparse import ArgumentParser

from anvio.errors import ConfigError, FilesNPathsError
from anvio.terminal import time_program


__copyright__ = "Copyleft 2015-2024, The Anvi'o Project (http://anvio.org/)"
__credits__ = []
__license__ = "GPL 3.0"
__version__ = anvio.__version__
__maintainer__ = "Metehan Sever"
__email__ = "metehaansever@gmail.com"
__provides__ = ['foldseek-structural-pangenome-output']
__description__ = "Run Foldseek"


run = terminal.Run()
progress = terminal.Progress()

@time_program
def main(args):
    p = span.StructurePan(args)
    p.process()


if __name__ == '__main__':

    parser = ArgumentParser(description=__description__)

    groupA = parser.add_argument_group('INPUT FILES', "Input files for creating DB from given fasta")
    groupA.add_argument(*anvio.A('contigs-db'), **anvio.K('contigs-db', {'required': True}))
    groupA.add_argument(*anvio.A('contigs-db-path'), **anvio.K('contigs-db-path', {'required': False}))
    groupA.add_argument(*anvio.A('foldseek-weight-dir'), **anvio.K('foldseek-weight-dir', {'required': False}))

    groupB = parser.add_argument_group('OUTPUT DIRECTORY', "Parameters that shows which directory we will use")
    groupB.add_argument(*anvio.A('output-dir'), **anvio.K('output-dir'))

    groupC = parser.add_argument_group('SWEET PARAMS OF CONVENIENCE', "Parameters and flags that are not quite essential (but\
                                                                       nice to have).")
    groupC.add_argument(*anvio.A('--tmp-dir'), **anvio.K('--tmp-dir'))
    groupC.add_argument(*anvio.A('num-threads'), **anvio.K('num-threads'))
    groupC.add_argument(*anvio.A('just-do-it'), **anvio.K('just-do-it'))

    args = parser.get_args(parser)

    try:
        main(args)
    except ConfigError as e:
        print(e)
        sys.exit(-1)
    except FilesNPathsError as e:
        print(e)
        sys.exit(-1)